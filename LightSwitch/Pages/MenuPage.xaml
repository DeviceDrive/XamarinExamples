<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LightSwitch.MenuPage">
	<ContentPage.Content>
		<StackLayout HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical" Spacing="14">
			<Image Source="{Binding LigthSwitchLogo}" HeightRequest="140"/>
			<BoxView HeightRequest="24"></BoxView>
			<Button Text="Edit Profile" Command="{Binding EditProfileCommand}"/>
			<Button Text="Log Out" Command="{Binding SignOutCommand}"/>
			<Button Text="Delete Active Device" Command="{Binding DeleteActiveDeviceCommand}"/>
			<Button Text="LinkUp Active Device" Command="{Binding LinkUpActiveDeviceCommand}"/>
            <Button Text="SmartLinkUp Device" Command="{Binding SmartLinkUpDeviceCommand}"/>
            <Button Text="Terms/Conditions" Command="{Binding TermsConditionsCommand}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
